      <SVGMask client:only size={8} revealSize={150} class="h-[38rem]">
        <div
          slot="base"
          class="text-white dark:text-black text-start user-select-none"
        >
          <h2
            class="text-3xl font-bold tracking-tighter xl:text-6xl sm:text-5xl"
